<%- include("partials/header.ejs") %>

<div class="container mt-4">
    <h1 class="display-4 text-center">
      <i class="fas fa-book-open text-primary"></i> My<span class="text-primary">Book</span>List</h1>
      <!-- Form -->
      <form id="book-form" method="POST" action="/add">
        <div class="form-group mt-2">
          <label for="title">Title</label>
          <input type="text" id="title" name="title" class="form-control">
        </div>
        <div class="form-group mt-2">
          <label for="author">Author</label>
          <input type="text" id="author" name="author" class="form-control">
        </div>
        <div class="form-group mt-2">
          <label for="isbn">ISBN#</label>
          <input type="text" id="isbn" name="isbn" class="form-control">
        </div>
        <input type="submit" value="Add Book" class="btn btn-primary btn-block mt-4">
      </form>
      <!-- ./Form -->

      <table class="table table-striped mt-5">
        <thead>
          <tr>
            <th>Title</th>
            <th>Author</th>
            <th>ISBN#</th>
            <th></th>
          </tr>
        </thead>
        <tbody id="book-list">
            <% data.forEach(row => { %>
              <tr>
                <td><%= row.bookName %></td>
                <td><%= row.author %></td>
                <td><%= row.isbn %></td>
                <td><a href="/delete/<%= row.isbn %>" class="btn btn-danger btn-block delete">X</a>
                <td><a href="/update/<%= row.isbn %>" class="btn btn-primary btn-block">Update</a>
              </tr>
            <% }); %>            
        </tbody>
      </table>
  </div>
  

<%- include("partials/footer.ejs") %>
  