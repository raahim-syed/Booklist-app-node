<%- include("partials/header.ejs") %>

<div class="container mt-4">
    <h1 class="display-4 text-center">
      <i class="fas fa-book-open text-primary"></i> My<span class="text-primary">Book</span>List</h1>
      <!-- Form -->
      <form id="book-form" method="POST" action="/update/<%= data.isbn %>">
        <div class="form-group mt-2">
          <label for="title">Title</label>
          <input type="text" id="title" name="title" class="form-control" value="<%= data.bookName %>">
        </div>
        <div class="form-group mt-2">
          <label for="author">Author</label>
          <input type="text" id="author" name="author" class="form-control" value="<%= data.author %>">
        </div>
        <div class="form-group mt-2">
          <label for="isbn">ISBN#</label>
          <input type="text" id="isbn" name="isbn" class="form-control" value="<%= data.isbn %>">
        </div>
        <input type="submit" value="Update" class="btn btn-primary btn-block mt-4">
      </form>
      <!-- ./Form -->
  </div>
  

<%- include("partials/footer.ejs") %>
  